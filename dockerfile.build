FROM debian:bullseye
WORKDIR /app

RUN apt update && apt install -y \
    build-essential \
    devscripts \
    debhelper \
    gnupg \
    dpkg-sig\
    dh-make \
    fakeroot \
    lintian \
    git \
    curl\
    sudo

# Ensure that the GPG Signature Tool is available
RUN apt install -y gnupg2

